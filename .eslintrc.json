{
	"env": {
		"browser": true,
		"es2021": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:@typescript-eslint/recommended",
		"plugin:prettier/recommended",
		"next/core-web-vitals",
		"next"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 15,
		"sourceType": "module"
	},
	"rules": {
		"indent": 0,
		"quotes": 0,
		"linebreak-style": 0,
		"no-console": 2,
		"import/no-unresolved": 0,
		"semi": [
			"warn",
			"always"
		],
		"react/react-in-jsx-scope": "off",
		"react/react-inlinebreak-style": "off",
		"prettier/prettier": [
			"warn",
			{
				"endOfLine": "auto",
				"arrowParens": "always",
				"parser": "typescript",
				"printWidth": 120,
				"trailingComma": "es5",
				"useTabs": true,
				"tabWidth": 2,
				"semi": true,
				"singleQuote": true,
				"jsxSingleQuote": true,
				"jsxBracketSameLine": true,
				"singleAttributePerLine": true,
				"overrides": [
					{
						"files": "*.tsx",
						"options": {
							"tabWidth": 2,
							"useTabs": true
						}
					}
				]
			}
		],
		"react/jsx-max-props-per-line": [
			1,
			{
				"maximum": 1
			}
		],
		"import/no-named-as-default": 0,
		"import/named": 0,
		"@next/next/no-css-tags": 0
	}
}
